<%- include('partials/header') %>
<div class="container mt-3 mb-3 auth">

  <h2>Login</h2>

  <div class="card shadow-lg">
    <!-- manual login card body -->
    <div class="card-body">
      <!-- flash messages for login errors -->
      <% if (messages.login) { %>
      <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <%= messages.login %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <% } %>
      <!-- registration form -->
      <form action="/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" class="form-control" name="email" required>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" class="form-control" name="password" required>
        </div>
        <button type="submit" class="btn btn-dark ml-auto mr-auto d-block">Login</button>
      </form>
    </div>
  </div>

  <!-- card body separator -->
  <h6><span><em>OR</em></span></h6>

  <!-- social registration card body -->
  <div class="card social-block shadow-lg">
    <!-- sign up with google -->
    <div class="card-body mx-4 my-4 p-0">
      <a class="btn btn-block text-white text-left google" href="/auth/google" role="button">
        <i class="fab fa-google ml-3 mr-2"></i> Sign In with Google
      </a>
    </div>
    <!-- sign up with facebook -->
    <div class="card-body mx-4 p-0">
      <a class="btn btn-block text-white text-left facebook" href="/auth/facebook" role="button">
        <i class="fab fa-facebook ml-3 mr-2"></i> Sign In with Facebook
      </a>
    </div>
    <!-- sign up with github -->
    <div class="card-body mx-4 my-4 p-0">
      <a class="btn btn-block text-white text-left github" href="/auth/github" role="button">
        <i class="fab fa-github ml-3 mr-2"></i> Sign In with GitHub
      </a>
    </div>
  </div>

</div>

<%- include('partials/header') %>
